Config { font = "-*-Fixed-R-Normal-*-13-*-*-*-*-*-*-*"
        , borderColor = "black"
        , persistent = True
        , allDesktops = True
        , border = TopB
        , bgColor = "#050f2a"
        , fgColor = "#445fa2"
        , position = TopW L 100
        , commands = [ Run Weather "EHRD" ["-t","<fc=#D2BF14><tempC></fc>C"] 36000
                        --, Run Network "eth0" ["-L","0","-H","1024","--normal","#D2BF14","--high","#D25014"] 10
                        , Run Com "cat" ["/home/pieter/.XmobarValues/EthernetDataDn"] "ethdown" 10
                        , Run Com "cat" ["/home/pieter/.XmobarValues/EthernetDataUp"] "ethup" 10
                        , Run Cpu ["-L","0","-H","50","--normal","#D2BF14","--high","#D25014"] 10
                        , Run Com "cat" ["/home/pieter/.XmobarValues/HDDPowerOnHours"] "poweron" 30
                        , Run Com "cat" ["/home/pieter/.XmobarValues/WarningValue"] "warning" 30
                        , Run Date "%a %b %_d %Y %H:%M:%S" "date" 10
                        , Run Uptime ["-t","Up: <fc=#D2BF14><days></fc>d <fc=#D2BF14><hours></fc>h <fc=#D2BF14><minutes></fc>m"] 60
                        , Run Locks
                        , Run StdinReader
                        , Run Memory ["-t","Mem: <used>MB"] 100
                        , Run Com "cat" ["/home/pieter/.XmobarValues/totalStorage"] "totalStore" 10
                        , Run Com "cat" ["/home/pieter/.XmobarValues/full"] "fullStore" 10
                        , Run CoreTemp [] 10
                        ]
        , sepChar = "%"
        , alignSep = "}{"
        , template = "<fc=#D2BF14>%locks%</fc> | %uptime% | Dn: <fc=#D2BF14>%ethdown%</fc>GB, Up: <fc=#D2BF14>%ethup%</fc>GB | <fc=#D2BF14>%fullStore%</fc>GB/<fc=#D2BF14>%totalStore%</fc>GB | %cpu% }{<fc=#D2BF14>%date%</fc> | %EHRD%"
        }
